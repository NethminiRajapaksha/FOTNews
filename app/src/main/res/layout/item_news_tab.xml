<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TechSports 2025 â€“ Faculty of Technology Sports Fiesta"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_news9" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TechSports 2025, the annual sports event organized by the Faculty of Technology, University of Colombo, was held with great enthusiasm and team spirit. The event brought together students, staff, and faculty members for a vibrant celebration of athleticism and camaraderie."
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvNewsDetailBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Held on May 31st at the University of Colombo Playgorund"
            android:textColor="@color/textPrimary"
            android:textStyle="italic"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
